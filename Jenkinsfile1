pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
            }
        }
        stage('Build') {
            steps {
                echo 'Building has been successfully'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying has been successfully'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing has been successfully'
            }
        }
    }
   stage('Email Notification')
{
      mail bcc: '', body: 'hi welcome to email notification', cc: '', from: '', replyTo: '', subject: 'jenkins mail', to: 'mohitesheetal22@gmail.com'
}
     
 }

