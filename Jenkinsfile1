pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
            }
        }
        stage('Build') {
            steps {
                echo 'Building has been successfully'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying has been successfully'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing has been successfully'
            }
        }
        stage('Email Notification'){
        steps{
        mail bcc: '', body: 'hi welcome to jenkins', cc: '', from: '', replyTo: '', subject: 'jenkins mail', to: 'mohitesheetal22@gmail.com'
        }
      }
    }
   }

